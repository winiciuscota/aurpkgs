#!/bin/sh

_vgmplay_help() {
cat <<EOF
Usage: vgmplay [options] filename
Plays VGM, VGZ, CMF, and DRO files either singly or by m3u playlist.

Options:
 -h, -?, --help               display this help and exit
 -c <file>,
         --config=<file>      load alternate config file

 -a,     --aoss               force use of aoss (ALSA's OSS wrapper)
 -o,     --oss                force use of OSS (native OSS, ossp)
 -p,     --padsp              force use of padsp (PulseAudio's OSS wrapper)
 -s <server>,
         --paserver=<server>  set alternate PulseAudio server (implies --padsp)

         --version            display VGMPlay and VGM Format versions and exit

Keys (In-Player):
 Left/Right                   Seek 5 seconds backward/forward
 Ctrl + Left/Right            Seek 60 seconds backward/forward
 Space                        Pause
 Escape twice                 Quit Program
 F                            Fade Out Current Track   
 R                            Restart Current Track
 PageUp/B                     Previous Track (in playlist)
 PageDown/N                   Next Track (in playlist)
EOF
}

_pwd="$PWD"
_force_padsp=0
_force_aoss=0
_force_oss=0
_config_path=""
_pulse_server=""

if [ -e "$XDG_CONFIG_HOME/vgmplay/VGMPlay.ini" ]; then
	_config_path="$XDG_CONFIG_HOME/vgmplay"
elif [ -e "$XDG_CONFIG_DIRS/vgmplay/VGMPlay.ini" ]; then
	_config_path="$(mktemp -d)"
	cp "$XDG_CONFIG_DIRS/vgmplay/VGMPlay.ini" "$_config_path"
fi

while :
do
	case $1 in
		-h | -\? | --help )
			_vgmplay_help
			exit 0 ;;
		-c | --config )
			if [ -n "$2" ]; then
				_config_path="$2"
				shift 2
			else
				echo "Invalid Arguments: file required for --config" >&2
				exit 22
			fi ;;
		--config=* )
			_config_path="${1#*=}"
			if [ -z "$_config_path" ]; then
				echo "Invalid Arguments: file required for --config" >&2
				exit 22
			fi
			shift ;;
		-a | --aoss )
			if [ "$_force_padsp" -eq "0" ] && [ "$_force_oss" -eq "0" ]; then
				_force_aoss="1"
				shift
			else
				echo "Invalid Arguments: can only force one output type" >&2
				exit 22
			fi ;;
		-o | --oss )
			if [ "$_force_padsp" -eq "0" ] && [ "$_force_aoss" -eq "0" ]; then
				_force_oss="1"
				shift
			else
				echo "Invalid Arguments: can only force one output type" >&2
				exit 22
			fi ;;
		-p | --padsp )			
			if [ "$_force_aoss" -eq "0" ] && [ "$_force_oss" -eq "0" ]; then
				_force_padsp="1"
				shift
			else
				echo "Invalid Arguments: can only force one output type" >&2
				exit 22
			fi ;;
		-s | --paserver )
			if [ "$_force_aoss" -eq "0" ] && [ "$_force_oss" -eq "0" ]; then
				_force_padsp="1"
			else
				echo "Invalid Arguments: can only force one output type" >&2
				exit 22
			fi

			if [ -n "$2" ]; then
				_pulse_server="$2"
				shift 2
			else
				echo "Invalid Arguments: server required for --paserver" >&2
				exit 22
			fi ;;
		--paserver=* )
			if [ "$_force_aoss" -eq "0" ] && [ "$_force_oss" -eq "0" ]; then
				_force_padsp="1"
			else
				echo "Invalid Arguments: can only force one output type" >&2
				exit 22
			fi
			
			_pulse_server="${1#*=}"
			if [ -z "$_pulse_server" ]; then
				echo "Invalid Arguments: server required for --paserver" >&2
				exit 22
			fi
			shift ;;
		-* )
			echo "WARN: Unknown option (write them separately?): $1" >&2
			shift ;;
		-- )
			shift
			break ;;
		* )
			break ;;
	esac
done

echo "$_pwd $_config_path $_force_aoss $_force_padsp $_force_oss $_pulse_server"
unset _pwd _config_path _force_aoss _force_padsp _force_oss _pulse_server
